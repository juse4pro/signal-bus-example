root = true

[*]
charset = utf-8


[*.cs]
indent_style = tab
indent_size = 4
max_line_length = off

# Don't allow 'var'
# Do not use 'var' for built-in types (e.g. int, string)
csharp_style_var_for_built_in_types = false:error

# Do not use 'var' when the type is apparent from the right-hand side
csharp_style_var_when_type_is_apparent = false:error

# Do not use 'var' even when the type is not apparent
csharp_style_var_elsewhere = false:error


# "this and Me preferences" from Microsoft - see https://docs.microsoft.com/de-de/dotnet/fundamentals/code-analysis/style-rules/ide0003-ide0009
# We want to use "this."

# Require 'this.' for fields
dotnet_style_qualification_for_field = true:error

# Require 'this.' for properties
dotnet_style_qualification_for_property = true:error

# Require 'this.' for methods
dotnet_style_qualification_for_method = true:error

# Require 'this.' for events
dotnet_style_qualification_for_event = true:error

